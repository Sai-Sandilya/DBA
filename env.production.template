# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Application Environment
DBA_ENV=production
DEBUG=false

# Database Configuration - MySQL
MYSQL_HOST=your-mysql-production-host
MYSQL_PORT=3306
MYSQL_DATABASE=your_production_database
MYSQL_USERNAME=your_mysql_username
MYSQL_PASSWORD=your_secure_mysql_password

# Database Configuration - PostgreSQL
POSTGRES_HOST=your-postgres-production-host
POSTGRES_PORT=5432
POSTGRES_DATABASE=your_production_database
POSTGRES_USERNAME=your_postgres_username
POSTGRES_PASSWORD=your_secure_postgres_password

# AI Model Configuration
OPENAI_API_KEY=your_openai_api_key
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:13b

# Security
JWT_SECRET=your_very_long_random_jwt_secret_key_here_make_it_at_least_32_characters
ENCRYPTION_KEY=your_32_character_encryption_key_for_sensitive_data

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379

# Monitoring and Alerting
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=your_secure_grafana_password

# External Integrations - Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# External Integrations - Email
SMTP_SERVER=your-smtp-server.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=dba-gpt@yourcompany.com
SMTP_TO_EMAILS=dba-team@yourcompany.com,admin@yourcompany.com

# External Integrations - Jira (Optional)
JIRA_URL=https://yourcompany.atlassian.net
JIRA_USERNAME=your_jira_username
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=DBA

# External Integrations - PagerDuty (Optional)
PAGERDUTY_API_KEY=your_pagerduty_api_key
PAGERDUTY_SERVICE_ID=your_pagerduty_service_id

# Performance Configuration
MAX_CONCURRENT_QUERIES=50
QUERY_TIMEOUT=300
CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/dba-gpt/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/dba-gpt.crt
SSL_KEY_PATH=/etc/ssl/private/dba-gpt.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/dba-gpt

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_LIMIT=20

# Session Management
SESSION_TIMEOUT=3600
MAX_SESSIONS_PER_USER=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Database Connection Pooling
MYSQL_CONNECTION_POOL_SIZE=10
MYSQL_MAX_CONNECTIONS=100
POSTGRES_CONNECTION_POOL_SIZE=15
POSTGRES_MAX_CONNECTIONS=150

# Error Handling
AUTO_RESOLUTION_ENABLED=true
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=5
CRITICAL_ERROR_THRESHOLD=5

# Compliance and Audit
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=2555
GDPR_COMPLIANCE=true
DATA_ENCRYPTION=true

# Access Logging
ACCESS_LOGS_ENABLED=true
LOG_USER_ACTIONS=true
LOG_QUERY_EXECUTIONS=true
LOG_SCHEMA_CHANGES=true
